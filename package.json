{
  "name": "express-typescript-starter",
  "version": "0.1.0",
  "description": "A starting point for Node.js express apps with TypeScript",
  "repository": {
    "type": "git",
    "url": "https://github.com/iamwilliamdiaz/typescript-nodejs-starter"
  },
  "author": "William Diaz",
  "license": "",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run tslint",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\"  \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "md-docs": "swagger-markdown -i src/definitions/unicorn-cs.yaml"
  },
  "dependencies": {
    "@cloudant/cloudant": "^4.1.0",
    "@types/request-promise-native": "^1.0.16",
    "@types/swagger-express-validator": "0.0.0",
    "@types/swagger-ui-express": "^3.0.1",
    "@types/yamljs": "^0.2.30",
    "async": "^2.6.0",
    "bcrypt-nodejs": "^0.0.3",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "compression": "^1.7.1",
    "core-js": "^3.1.3",
    "dotenv": "^4.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.17.0",
    "express-session": "^1.15.6",
    "express-validator": "^4.3.0",
    "express-winston": "^3.2.0",
    "https": "^1.0.0",
    "lodash": "^4.17.5",
    "loopback-connector-cloudant": "^2.3.0",
    "loopback-datasource-juggler": "^4.8.0",
    "loopback-swagger": "^5.7.3",
    "lusca": "^1.5.2",
    "nodemailer": "^4.4.1",
    "openapi-types": "^1.3.5",
    "pug": "^2.0.3",
    "request": "^2.88.0",
    "request-promise": "^4.2.2",
    "request-promise-native": "^1.0.7",
    "swagger-express-router": "^1.0.0",
    "swagger-express-validator": "^1.0.0",
    "swagger-object-validator": "^1.2.1",
    "swagger-parser": "^7.0.0",
    "swagger-request-validator": "^2.0.3",
    "swagger-ui-express": "^4.0.6",
    "winston": "^3.2.1",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/async": "^2.0.45",
    "@types/bcrypt-nodejs": "^0.0.30",
    "@types/bluebird": "^3.5.20",
    "@types/body-parser": "^1.16.8",
    "@types/compression": "^0.0.35",
    "@types/connect-mongo": "^0.0.35",
    "@types/dotenv": "^4.0.2",
    "@types/errorhandler": "^0.0.32",
    "@types/express": "^4.11.1",
    "@types/express-session": "^1.15.8",
    "@types/jest": "^22.1.3",
    "@types/jquery": "^3.3.29",
    "@types/lodash": "^4.14.129",
    "@types/lusca": "^1.5.0",
    "@types/node": "^9.6.49",
    "@types/nodemailer": "^4.3.4",
    "@types/request": "^2.47.0",
    "@types/supertest": "^2.0.4",
    "chai": "^4.1.2",
    "concurrently": "^3.5.1",
    "jest": "^24.0.0",
    "nodemon": "^1.18.10",
    "shelljs": "^0.8.1",
    "supertest": "^3.0.0",
    "ts-jest": "^24.0.0",
    "ts-node": "^5.0.0",
    "tslint": "^5.9.1",
    "typescript": "^3.4.5"
  }
}
